		$(wildcard $(SRC_DIR/*.c)) \
		$(UTIL_SRCS) \
		$(INIT_SRCS) \
		${RENDER_SRCS} \
		${UPDATE_SRCS}


OBJS = $(addprefix $(OBJ_DIR)/, $(notdir $(SRCS: .c=.o)))
