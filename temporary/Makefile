all : $(NAME)

clean : 
	@$(RM) $(RMFALGS) $(OBJS) $(OBJS_BONUS)
	@printf "$(LF)üßπ $"

fclean : clean
	@$(RM) $(RMFLAGS) $(NAME)

re : fclean all

#re_bonus : fclean bonus

